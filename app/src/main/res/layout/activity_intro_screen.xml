<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_screenbg"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.utility.customView.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Perfect11"
        android:textColor="@color/red_text_color"
        android:textSize="@dimen/mid_text_size"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="20dp"
        android:src="@drawable/flag_list_icon" />

    <com.utility.customView.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Become a Manager of fantasy Cricket Series"
        android:textColor="@android:color/white"
        android:textSize="@dimen/min_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_image1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/image_1"
            android:padding="5dp"
            android:background="@drawable/squrecorner_image_bg"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/iv_image2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/image_1"
            android:padding="5dp"
            android:background="@drawable/squrecorner_image_bg"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_image3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/image_1"
            android:padding="5dp"
            android:background="@drawable/squrecorner_image_bg"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/iv_image4"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/image_1"
            android:padding="5dp"
            android:background="@drawable/squrecorner_image_bg"
            />

    </LinearLayout>
    <com.utility.customView.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Use your skill to be a winner or every match!"
        android:textColor="@android:color/white"
        android:textSize="@dimen/min_text_size"
        android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <com.utility.customView.CustomButton
                android:id="@+id/btn_login"
                android:onClick="onButtonClick"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_red_btn_bg"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:layout_marginRight="10dp"/>

            <com.utility.customView.CustomButton
                android:id="@+id/btn_register"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_white_btn_bg"
                android:text="Register"
                android:onClick="onButtonClick"
                android:textAllCaps="false"
                android:textColor="@android:color/black" />

        </LinearLayout>
        <com.utility.customView.CustomTextView
            android:id="@+id/ctv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Skip For Now"
            android:onClick="onButtonClick"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout></ScrollView>
</LinearLayout>
