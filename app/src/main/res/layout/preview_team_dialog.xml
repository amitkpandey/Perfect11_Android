<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:onClick="onButtonClick"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@color/light_gray">

        <com.utility.customView.CustomTextView
            android:id="@+id/tv_name"

            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Team Preview"
            android:textColor="@color/red_text_color"
            android:onClick="onButtonClick"
            />

        <Button
            android:id="@+id/btn_arrow"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:contentDescription="@null"
            android:gravity="center"
            android:checked="true"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_name"
            android:background="@drawable/down_arrow"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:onClick="onButtonClick"/>

        <RelativeLayout
            android:id="@+id/rl_team1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tv_name">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cimg_country1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@null"
                android:onClick="onButtonClick"
                android:src="@drawable/ind" />

            <com.utility.customView.CustomTextView
                android:id="@+id/tv_team1"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/cimg_country1"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Ind"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <com.utility.customView.CustomTextView
                android:id="@+id/tv_team_count1"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_team1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/cimg_country1"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="6/7"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_team2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_name"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cimg_country2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="@null"
                android:onClick="onButtonClick"
                android:src="@drawable/aus" />

            <com.utility.customView.CustomTextView
                android:id="@+id/tv_team2"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/cimg_country2"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Aus"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <com.utility.customView.CustomTextView
                android:id="@+id/tv_team_count2"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_team2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/cimg_country2"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="5/7"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/pitch"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/iv_wkt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:contentDescription="@null"
                android:onClick="onButtonClick"
                android:scaleType="fitXY"
                android:src="@drawable/man3" />

            <LinearLayout
                android:id="@+id/rl_batsman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_bat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:onClick="onButtonClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/man4" />

                <ImageView
                    android:id="@+id/iv_bat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="@null"
                    android:onClick="onButtonClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/man4" />

                <ImageView
                    android:id="@+id/iv_bat3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="@null"
                    android:onClick="onButtonClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/man4" />

                <ImageView
                    android:id="@+id/iv_bat4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="@null"
                    android:onClick="onButtonClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/man4" />

                <ImageView
                    android:id="@+id/iv_bat5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:onClick="onButtonClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/man4" />

                <ImageView
                    android:id="@+id/iv_bat6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="@null"
                    android:onClick="onButtonClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/man4" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_ar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_ar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:onClick="onButtonClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/man2" />

                <ImageView
                    android:id="@+id/iv_ar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="@null"
                    android:onClick="onButtonClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/man2" />

                <ImageView
                    android:id="@+id/iv_ar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:contentDescription="@null"
                    android:onClick="onButtonClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/man2" />

                <ImageView
                    android:id="@+id/iv_ar4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="@null"
                    android:onClick="onButtonClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/man2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_bowlers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="90dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_bowler1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:onClick="onButtonClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/man1" />

                <ImageView
                    android:id="@+id/iv_bowler2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:contentDescription="@null"
                    android:onClick="onButtonClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/man1" />

                <ImageView
                    android:id="@+id/iv_bowler3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:contentDescription="@null"
                    android:onClick="onButtonClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/man1" />

                <ImageView
                    android:id="@+id/iv_bowler4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:contentDescription="@null"
                    android:onClick="onButtonClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/man1" />

                <ImageView
                    android:id="@+id/iv_bowler5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:contentDescription="@null"
                    android:onClick="onButtonClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/man1" />

                <ImageView
                    android:id="@+id/iv_bowler6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:contentDescription="@null"
                    android:onClick="onButtonClick"
                    android:scaleType="fitXY"
                    android:src="@drawable/man1" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>

